<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h1>Listing Accounts</h1></div>
  <div class="panel-body">
    <%= link_to 'New Account', new_account_path %>
    <p id="notice"><%= notice %></p>
  </div>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>User</th>
      <th>Name account</th>
      <th>Amount account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <th><%= account.user.email %></th>
        <td><%= account.name_account %></td>
        <td><%= account.amount_account %></td>
        <td><%= account.currency %></td>

        <td>
          <% if user_signed_in? %>
            <% if account.user_id == current_user.id %>
              <td><%= link_to 'Show', account %></td>
              <td><%= link_to 'Edit', edit_account_path(account) %></td>
              <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
