<!DOCTYPE html>
<html>
<head>
  <title>FamilyBudget</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="container">
        <div class="navbar-header">
          <%= link_to 'Family Budget', root_path, class: 'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Accounts', accounts_path %></li>
            <li><%= link_to 'Debts', debts_path %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li>
              <% if user_signed_in? %>
                <%= link_to current_user.email, class: 'navbar-right navbar-text navbar-link'%>
                <li>
                  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                <%= link_to 'Sign Up', new_user_registration_path %>
              <% end %>
            </li>
            <li>
              <% if user_signed_in? %>
              <% else %>
                <%= link_to 'Log In', new_user_session_path %>
              <% end %>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
      </div>
    </nav>
  <div class="container">

    <%= yield %>
  </div>
</body>
</html>
